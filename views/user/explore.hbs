<div class="d-flex min-vh-100 gap-2">
  {{> sidebar}}

  <div class="explore-page mt-4">

    <form action="/explore" method="GET">
        <input type="search" style="width:500px" name="search" placeholder="See who's using AppSign!" />
        <button type="submit">Search</button>
    </form>

    <ul style="list-style:none" class="users-list">
        {{#each users as |user|}}
        <li class="d-flex">
        <a class="text-decoration-none" href="/profile/{{user.id}}">{{user.firstName}} {{user.lastName}}</a>
        <span class="d-flex astral-description">
            <div class="d-flex">
                <i class="bi bi-sun"></i>
                <p> {{user.sunSign.name}}</p>
            </div>
            <div class="d-flex">
                <i class="bi bi-moon"></i>
                <p> {{user.moonSign.name}}</p>
            </div>
            <div class="d-flex">
                <i class="bi bi-arrow-up"></i>
                <p> {{user.ascendantSign.name}}</p>
            </div>
        </span>
        </li>
        {{/each}}
    </ul>
  </div>

</div>
