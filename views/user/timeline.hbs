<div class="d-flex gap-2">

  {{> sidebar}}

  <section class="timeline-page" style="position:relative">
    <h1>See what's happening!</h1>

    {{#each posts as |post|}}
    <div class="post-structure">
      <div class="user-profile">
        <img style="width:60px" src="{{post.user.image}}" alt="User profile picture">
        <h4>{{post.user.firstName}}</h4>
        <span class="d-flex astral-description pt-1">
            <div class="d-flex">
              <i class="bi bi-sun"></i>
              <p>{{post.user.sunSign.name}}</p>
            </div>
            <div class="d-flex">
              <i class="bi bi-moon"></i>
              <p>{{post.user.moonSign.name}}</p>
            </div>
            <div class="d-flex">
              <i class="bi bi-arrow-up"></i>
              <p>{{post.user.ascendantSign.name}}</p>
            </div>
          </span>
      </div>
      <div class="post-content mt-2">
        <p class="px-3">{{post.body}}</p>
        {{#if post.image}}
        <img class="post-img mb-2 data-bs-toggle="modal" data-bs-target="#exampleModal"" style="width:200px" src="{{post.image}}" alt="Post image" data-bs-toggle="modal" data-bs-target="#exampleModal">
        {{/if}}
        <p class="px-3">Posted on {{post.user.createdAt}}</p>
      </div>
    </div>
    {{/each}}



<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div>
      <div class="modal-body">
        
      </div>
    </div>
  </div>
</div>
  </section>
  
</div>