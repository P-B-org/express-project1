<div class="d-flex gap-2">

  {{> sidebar}}

  <section style="position:relative">
    <h1>Timeline</h1>

    {{#each posts as |post|}}
    <div class="user-profile">
      <img style="width:50px" src="{{post.user.image}}" alt="User profile picture">
      <h4>{{post.user.firstName}}</h4>
    </div>
    <p>{{post.body}}</p>
    {{#if post.image}}
    <img class="post-img data-bs-toggle="modal" data-bs-target="#exampleModal"" style="width:200px" src="{{post.image}}" alt="Post image" data-bs-toggle="modal" data-bs-target="#exampleModal">
    {{/if}}
    {{/each}}


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div>
      <div class="modal-body">
        
      </div>
    </div>
  </div>
</div>
  </section>
  
</div>