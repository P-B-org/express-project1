<div class="d-flex gap-2">

  {{> sidebar}}

  <div class="profile-page">

  <section class="header">
    <div class="d-flex align-items-center">
      <img class="user-img" src="{{currentUser.image}}" alt="User sun sign profile picture">
      <div>
        <h4>{{currentUser.firstName}}</h4>
        <span class="d-flex astral-description">
          <div class="d-flex">
            <i class="bi bi-sun"></i>
            <p>{{currentUser.sunSign.name}}</p>
          </div>
          <div class="d-flex">
            <i class="bi bi-moon"></i>
            <p>{{currentUser.moonSign.name}}</p>
          </div>
          <div class="d-flex">
            <i class="bi bi-arrow-up"></i>
            <p>{{currentUser.ascendantSign.name}}</p>
          </div>
        </span>
      </div>
    </div>

    <div>
      <a class="btn" style="background-color: #8FEBE0" href="/notifications">
      <span>Notifications</span>
      <i class="bi bi-bell"></i>
      </a>
      </div>
  </section>

  <section>
    <h5><i>{{dailyHoroscope.description}}</i></h5>
    <h6>Today's luck...</h6>
    <p><strong>Number: </strong>{{dailyHoroscope.lucky_number}}</p>
    <p><strong>Time: </strong>{{dailyHoroscope.lucky_time}}</p>
  </section>

  <section class="astral-card row">
    <div class="col-lg-4 col-sm-12">
      <i class="bi bi-sun"></i>
      <p> {{currentUser.sunSign.sun}}</p>
    </div>
    <div class="col-lg-4 col-sm-12">
      <i class="bi bi-moon"></i>
      <p> {{currentUser.moonSign.moon}}</p>
    </div>
    <div class="col-lg-4 col-sm-12">
      <i class="bi bi-arrow-up"></i>
      <p> {{currentUser.ascendantSign.ascendant}}</p>
    </div>
  </section>

